pipeline {
    agent any
 
    tools {
        maven 'Maven3.9.11'   // name of Maven you configured in Jenkins Global Tool Configuration
        jdk 'JDK17'      // or whatever JDK name you configured in Jenkins
    }
 
    stages {
        stage('Checkout') {
            steps {
                git ''
            }
        }
 
        stage('Build & Test') {
            steps {
                bat 'mvn clean test'   // use 'sh' if running on Linux
            }
        }
    }
 
    post {
        always {
            allure([
                includeProperties: false,
                jdk: '',
                results: [[path: 'target/allure-results']]
            ])
        }
    }
}
